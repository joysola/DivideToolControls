<UserControl x:Class="DivideToolControls.Controls.Magnifier"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DivideToolControls.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="250">
    <Grid x:Name="MGrid">
        <Canvas Name="Can_Magnifier" VerticalAlignment="Bottom" HorizontalAlignment="Left" ZIndex="3" 
                Width="{Binding ElementName=MGrid,Path=ActualWidth}" Height="{Binding ElementName=MGrid,Path=ActualHeight}">
            <Thumb Name="ThumbMag" Width="200" Height="200" Canvas.Left="20" Canvas.Top="20" Style="{StaticResource MagnifierThumb}" />
        </Canvas>
    </Grid>
</UserControl>
