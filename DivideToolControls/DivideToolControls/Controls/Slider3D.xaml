<UserControl x:Class="DivideToolControls.Controls.Slider3D"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DivideToolControls.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Image Name="UpZ" Source="images/TopArrow.png" Width="40" Height="40" Cursor="Hand" ToolTip="上一层" />
            <Label Name="Zvalue" Width="40" Height="40" FontSize="26" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">0</Label>
            <Image Name="DownZ" Source="images/DownArrow.png" Width="40" Height="40" Cursor="Hand" ToolTip="下一层" />
        </StackPanel>
    </Grid>
</UserControl>
